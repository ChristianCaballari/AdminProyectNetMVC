@using AdminProyectos.Utils;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administración de Proyectos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminProyectos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css"/>
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.min.css"/>
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
   

</head>
<body>  
    
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient">
                    <div class="container-fluid">

                         <!-- Icono o titulo -->
                <a class="nav-link" asp-controller="Proyect" asp-action="Index">
                    <img src="~/img//logo-light-icon.png" alt="HomePage"/>
                </a>
                         
                         <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample2" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                              <span class="navbar-toggler-icon"></span>
                         </button>


                <div class="offcanvas offcanvas-end bg-gradient text-white" id="offcanvasExample2">
                              
                              <!-- Header -->
                              <div class="offcanvas-header">
                                   <h5 class="offcanvas-title" id="offcanvasExampleLabel">Administrador Proyectos</h5>
                                   <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                              </div>

                              <!-- Cuerpo -->
                              <div class="offcanvas-body">


                        

                                   <!-- Enlaces -->
                                   <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                        <li class="nav-item">
                                           <a class="nav-link  @Url.MakeActiveClass("Proyect","Index")"  asp-controller="Proyect" asp-action="Index" aria-current="page">Proyectos</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link  @Url.MakeActiveClass("Proyect","Create")"  asp-controller="Proyect" asp-action="Create">Crear Proyecto</a>
                                        </li>
                                   </ul>

                                   <!-- Formulario -->
                        <form asp-action="Logout" asp-controller="User" class="d-flex">

                                       <button class="btn btn-outline-light" type="submit">Cerrar Sesión</button>
                                   </form>
                              </div>
                         </div>
                    </div>
               </nav>



          </div>

    <div class="container">
        <script src="~/lib/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AdminProyectos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
